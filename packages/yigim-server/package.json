{
  "name": "yigim-server",
  "version": "0.0.0",
  "author": "geongun20 <leesg9@snu.ac.kr>",
  "license": "ISC",
  "scripts": {
    "build:prod": "rm -rf dist && webpack --config ./configs/webpack.prod.js",
    "build:dev": "webpack --config ./configs/webpack.dev.js",
    "build-watched:dev": "yarn build:dev --watch",
    "run-server": "serverless offline",
    "run-server-watched": "nodemon -w serverless.yml -w dist/ -x 'yarn run-server'",
    "dev": "npm-run-all --parallel build-watched:dev run-server-watched",
    "deploy-only": "serverless prune -n 20 --stage prod && serverless deploy --stage prod",
    "deploy": "npm-run-all build:prod deploy-only"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.59",
    "@types/aws-sdk": "^2.7.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "serverless": "^1.76.1",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-offline": "^6.5.0",
    "serverless-prune-plugin": "^1.4.3",
    "ts-loader": "^8.0.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.0.9"
  },
  "dependencies": {
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.720.0"
  }
}
